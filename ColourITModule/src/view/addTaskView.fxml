<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="450.0" prefWidth="429.0" userData="Add a task to the task list" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AddTaskViewController">
   <children>
      <HBox prefHeight="6.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Task ID:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="taskIDTextField" prefHeight="26.0" prefWidth="200.0" promptText="Task ID" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="3.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Requirement ID:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="requirementIDTextField" prefHeight="26.0" prefWidth="200.0" promptText="4 Characters" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="0.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Label Name:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="labelNameTextField" prefHeight="26.0" prefWidth="200.0" promptText="Task Name" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="0.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Description:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="taskDescriptionTextField" prefHeight="26.0" prefWidth="200.0" promptText="Task Description" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="14.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Deadline:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <DatePicker fx:id="deadlineDatePicker" prefHeight="26.0" prefWidth="200.0" promptText="YYYY/MM/DD" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="2.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Estimated Hours:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="estimatedHoursTextField" prefHeight="26.0" prefWidth="200.0" promptText="Estimated hours" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="6.0" prefWidth="600.0">
         <children>
            <Label prefHeight="35.0" prefWidth="180.0" text="Status:">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="statusChoiceBox" prefHeight="26.0" prefWidth="200.0" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="59.0" prefWidth="430.0">
         <children>
            <Button onAction="#addTaskCancelButtonPressed" mnemonicParsing="false" prefHeight="51.0" prefWidth="120.0" text="Cancel">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Button>
            <Button onAction="#addTaskSubmitButtonPressed" mnemonicParsing="false" prefHeight="51.0" prefWidth="120.0" text="Submit">
               <font>
                  <Font size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="120.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="errorLabel" text="ErrorLabel" textFill="RED">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</VBox>
